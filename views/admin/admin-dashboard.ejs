<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Dashboard Amministratore - EcoGarden' %></title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <!-- Responsive CSS -->
    <link href="/css/responsive.css" rel="stylesheet">
    
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .navbar-brand {
            font-weight: 600;
            color: #198754 !important;
        }
        
        .admin-header {
            background: linear-gradient(135deg, #198754, #20c997);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }
        
        .section-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            padding: 1.5rem;
            margin-bottom: 2rem;
            border: none;
        }
        
        .section-title {
            color: #495057;
            font-weight: 600;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .btn-add {
            background: linear-gradient(135deg, #198754, #20c997);
            border: none;
            color: white;
            border-radius: 8px;
            padding: 0.5rem 1rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .btn-add:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(25, 135, 84, 0.3);
            color: white;
        }
        
        .btn-delete {
            background: #dc3545;
            border: none;
            color: white;
            border-radius: 6px;
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
            transition: all 0.3s ease;
        }
        
        .btn-delete:hover {
            background: #c82333;
            transform: translateY(-1px);
            color: white;
        }
        
        .list-group-item {
            border: 1px solid #e9ecef;
            border-radius: 8px !important;
            margin-bottom: 0.5rem;
            transition: all 0.3s ease;
        }
        
        .list-group-item:hover {
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            transform: translateY(-1px);
        }
        
        .category-badge {
            background: #e3f2fd;
            color: #1565c0;
            padding: 0.25rem 0.5rem;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 500;
        }
        
        .empty-state {
            text-align: center;
            padding: 3rem 2rem;
            color: #6c757d;
        }
        
        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }
        
        .alert {
            border-radius: 10px;
            border: none;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }
        
        .stat-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border-left: 4px solid #198754;
        }
        
        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: #198754;
        }
        
        .stat-label {
            color: #6c757d;
            font-size: 0.9rem;
            margin-top: 0.5rem;
        }
        
        @media (max-width: 768px) {
            .admin-header {
                padding: 1rem 0;
            }
            
            .section-card {
                margin: 0 0.5rem 1rem;
                padding: 1rem;
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">
                <i class="bi bi-tree-fill me-2"></i>EcoGarden
            </a>
            
            <div class="navbar-nav ms-auto">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle me-1"></i>
                        Amministratore
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/dashboard">
                            <i class="bi bi-speedometer2 me-2"></i>Dashboard
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="/logout">
                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                        </a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Admin Header -->
    <div class="admin-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col">
                    <h1 class="mb-1">
                        <i class="bi bi-gear-fill me-2"></i>
                        Pannello Amministratore
                    </h1>
                    <p class="mb-0 opacity-75">Gestisci categorie, piazzole e utenti del campeggio</p>
                </div>
                <div class="col-auto">
                    <a href="/admin/users" class="btn btn-light">
                        <i class="bi bi-people-fill me-2"></i>Gestione Utenti
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Messages -->
        <% if (success) { %>
            <div class="alert alert-success alert-dismissible fade show">
                <i class="bi bi-check-circle-fill me-2"></i>
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <% if (error) { %>
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Statistics -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-number"><%= categories.length %></div>
                <div class="stat-label">Categorie Totali</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= pitches.length %></div>
                <div class="stat-label">Piazzole Totali</div>
            </div>
        </div>

        <div class="row">
            <!-- Categories Section -->
            <div class="col-lg-6">
                <div class="section-card">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3 class="section-title">
                            <i class="bi bi-tags-fill"></i>
                            Categorie
                        </h3>
                        <button class="btn btn-add" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                            <i class="bi bi-plus-lg me-1"></i>
                            Aggiungi
                        </button>
                    </div>
                    
                    <% if (categories.length > 0) { %>
                        <div class="list-group list-group-flush">
                            <% categories.forEach(category => { %>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="bi bi-tag-fill text-primary me-2"></i>
                                        <strong><%= category.name %></strong>
                                    </div>
                                    <button class="btn btn-delete btn-sm" onclick="deleteCategory('<%= category._id %>', '<%= category.name %>')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="empty-state">
                            <i class="bi bi-tags"></i>
                            <h5>Nessuna categoria</h5>
                            <p>Aggiungi la prima categoria per organizzare le piazzole</p>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Pitches Section -->
            <div class="col-lg-6">
                <div class="section-card">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3 class="section-title">
                            <i class="bi bi-house-door-fill"></i>
                            Piazzole
                        </h3>
                        <button class="btn btn-add" data-bs-toggle="modal" data-bs-target="#addPitchModal" <%= categories.length === 0 ? 'disabled title="Crea prima una categoria"' : '' %>>
                            <i class="bi bi-plus-lg me-1"></i>
                            Aggiungi
                        </button>
                    </div>
                    
                    <% if (pitches.length > 0) { %>
                        <div class="list-group list-group-flush">
                            <% pitches.forEach(pitch => { %>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="bi bi-house-door text-success me-2"></i>
                                        <strong><%= pitch.name %></strong>
                                        <span class="category-badge ms-2"><%= pitch.category.name %></span>
                                    </div>
                                    <button class="btn btn-delete btn-sm" onclick="deletePitch('<%= pitch._id %>', '<%= pitch.name %>')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="empty-state">
                            <i class="bi bi-house-door"></i>
                            <h5>Nessuna piazzola</h5>
                            <p>Aggiungi piazzole per iniziare a gestire le prenotazioni</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Category Modal -->
    <div class="modal fade" id="addCategoryModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-plus-circle me-2"></i>
                        Aggiungi Categoria
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/admin/categories">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="categoryName" class="form-label">Nome Categoria *</label>
                            <input type="text" class="form-control" id="categoryName" name="name" required placeholder="es. Tende, Camper, Bungalow">
                            <div class="form-text">Il nome verrà automaticamente formattato</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-lg me-1"></i>
                            Crea Categoria
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Add Pitch Modal -->
    <div class="modal fade" id="addPitchModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-plus-circle me-2"></i>
                        Aggiungi Piazzola
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/admin/pitches">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="pitchName" class="form-label">Nome Piazzola *</label>
                            <input type="text" class="form-control" id="pitchName" name="name" required placeholder="es. Piazzola 101, Bungalow Girasole">
                        </div>
                        <div class="mb-3">
                            <label for="pitchCategory" class="form-label">Categoria *</label>
                            <select class="form-select" id="pitchCategory" name="category" required>
                                <option value="">Seleziona una categoria</option>
                                <% categories.forEach(category => { %>
                                    <option value="<%= category._id %>"><%= category.name %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-lg me-1"></i>
                            Crea Piazzola
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Funzione per eliminare categoria
        function deleteCategory(id, name) {
            if (confirm(`Sei sicuro di voler eliminare la categoria "${name}"?\n\nATTENZIONE: Non potrai eliminarla se ci sono piazzole associate.`)) {
                fetch(`/admin/categories/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Accept': 'application/json'
                    }
                })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        return response.text().then(text => {
                            throw new Error(text);
                        });
                    }
                })
                .catch(error => {
                    alert('Errore nell\'eliminazione della categoria: ' + error.message);
                });
            }
        }
        
        // Funzione per eliminare piazzola
        function deletePitch(id, name) {
            if (confirm(`Sei sicuro di voler eliminare la piazzola "${name}"?\n\nATTENZIONE: Non potrai eliminarla se ci sono prenotazioni associate.`)) {
                fetch(`/admin/pitches/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Accept': 'application/json'
                    }
                })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        return response.text().then(text => {
                            throw new Error(text);
                        });
                    }
                })
                .catch(error => {
                    alert('Errore nell\'eliminazione della piazzola: ' + error.message);
                });
            }
        }
        
        // Auto dismiss alerts
        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
        
        // Focus sui campi input quando si aprono i modal
        document.getElementById('addCategoryModal').addEventListener('shown.bs.modal', function() {
            document.getElementById('categoryName').focus();
        });
        
        document.getElementById('addPitchModal').addEventListener('shown.bs.modal', function() {
            document.getElementById('pitchName').focus();
        });
    </script>
</body>
</html>
